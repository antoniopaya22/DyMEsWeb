---
export interface Props {
  title?: string;
  description?: string;
}

const { title = 'DyMEs — D&D 5e', description = 'Gestiona tus partidas y personajes de D&D 5e en español' } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <script is:inline>
      (function(){
        // Check app settings store first (dyd:settings)
        try {
          var saved = localStorage.getItem('dyd:settings');
          if(saved){
            var settings = JSON.parse(saved);
            var tema = settings.tema;
            if(tema === 'claro'){
              document.documentElement.classList.remove('dark');
              return;
            }
            if(tema === 'oscuro'){
              document.documentElement.classList.add('dark');
              return;
            }
            if(tema === 'auto'){
              if(window.matchMedia('(prefers-color-scheme: dark)').matches){
                document.documentElement.classList.add('dark');
              } else {
                document.documentElement.classList.remove('dark');
              }
              return;
            }
          }
        } catch(e){}
        // Fallback: check simple theme key (public pages)
        if(localStorage.getItem('dymes-theme')==='dark'){
          document.documentElement.classList.add('dark');
        }
      })();
    </script>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#17160F" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body class="bg-[#F0EFE8] dark:bg-[#272519] text-[#272519] dark:text-white min-h-screen transition-colors duration-200">
    <slot />
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>
