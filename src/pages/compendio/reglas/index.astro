    }
    .reglas-damage-desc {
      font-size: 11.5px; color: #555137; line-height: 1.5; margin-top: 0.1rem;
    }

    @media (min-width: 640px) {
      .reglas-conditions-grid { grid-template-columns: 1fr; }
    }
  </style>
</CompendioLayout>
