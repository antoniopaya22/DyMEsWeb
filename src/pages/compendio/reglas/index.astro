    }

    /* ‚îÄ‚îÄ‚îÄ Damage Type Cards ‚îÄ‚îÄ‚îÄ */
    .reglas-damage-grid {
      display: grid; grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
      gap: 0.5rem;
    }
    .reglas-damage-card {
